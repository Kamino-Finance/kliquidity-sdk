{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "allowJs": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["dist", "node_modules"]
}
